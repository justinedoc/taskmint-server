{
  "name": "taskmint-server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.js",
    "build": "tsc && tsc-alias && copyfiles -u 1 src/templates/*.html dist",
    "seed": "tsx src/db/seed/index.js --env-file=.env",
    "start": "node dist/index.js",
    "lint": "biome check src",
    "format": "biome check --write src"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/zod-openapi": "^1.1.5",
    "@hono/zod-validator": "^0.7.5",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "google-auth-library": "^10.5.0",
    "hono": "^4.10.7",
    "hono-rate-limiter": "^0.4.2",
    "mongoose": "^9.0.0",
    "nodemailer": "^7.0.11",
    "otplib": "^12.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "stoker": "^2.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "copyfiles": "^2.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
